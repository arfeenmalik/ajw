{{#if isSecondary}}
    <ul class="navbar-nav ml-auto">
        {{#foreach navigation}}
            <li class="nav-item">
                <a class="nav-link{{#if current}} active{{/if}}" aria-current="page" href="{{url absolute="true"}}">{{label}}</a>
            </li>
        {{/foreach}}
    </ul>
{{else}}
    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        {{#foreach navigation}}
            <li class="nav-item">
                <a class="nav-link{{#if current}} active{{/if}}" aria-current="page" href="{{url absolute="true"}}">{{label}}</a>
            </li>
        {{/foreach}}
    </ul>
{{/if}}


